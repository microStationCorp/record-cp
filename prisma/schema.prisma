generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Coaches {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  created_at   DateTime @default(now())
  base         String
  coach_number String
  coach_type   String
  rake_type    String
  p_date       String?
  r_date       String?

  SGCoaches     SGCoaches?
  LHBCoaches    LHBCoaches?
  GRCoaches     GRCoaches?
  PantryCoaches PantryCoaches?
  PowerCoaches  PowerCoaches?
}

model SGCoaches {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  created_at DateTime @default(now())

  inverter        String?
  rru             String?
  battery         String?
  pump            String?
  battery_charger String?
  alternator      String?
  plant           String?
  lights          String?
  fan             String?
  m_chg           String?
  condenser       String?
  compressor      String?
  thermostat      String?

  coach   Coaches @relation(fields: [coachID], references: [id], onDelete: Cascade)
  coachID String  @unique @db.ObjectId
}

model LHBCoaches {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  created_at DateTime @default(now())

  sbc             String?
  rbc             String?
  ebc             String?
  erbc            String?
  battery         String?
  microcontroller String?
  lights          String?
  m_chg           String?
  ael             String?
  net_contactor   String?
  k44             String?
  mmr             String?
  condenser       String?
  compressor      String?
  pump            String?

  coach   Coaches @relation(fields: [coachID], references: [id])
  coachID String  @unique @db.ObjectId
}

model GRCoaches {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  created_at DateTime @default(now())

  coach   Coaches @relation(fields: [coachID], references: [id])
  coachID String  @unique @db.ObjectId
}

model PantryCoaches {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  created_at DateTime @default(now())

  coach   Coaches @relation(fields: [coachID], references: [id])
  coachID String  @unique @db.ObjectId
}

model PowerCoaches {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  created_at DateTime @default(now())

  coach   Coaches @relation(fields: [coachID], references: [id])
  coachID String  @unique @db.ObjectId
}
